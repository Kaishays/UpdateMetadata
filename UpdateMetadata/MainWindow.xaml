<Window x:Class="UpdateMetadata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UpdateMetadata"
        mc:Ignorable="d"
        Title="Metadata Update Tool" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Metadata Update Tool" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <Button x:Name="SyncButton" 
                    Content="Sync Y Drive to Database" 
                    Width="250" 
                    Height="50" 
                    FontSize="16" 
                    Margin="0,0,0,20"
                    Click="SyncButton_Click"/>
            
            <Button x:Name="SingleFileCheckButton" 
                    Content="Single File Check" 
                    Width="250" 
                    Height="50" 
                    FontSize="16" 
                    Margin="0,0,0,20"
                    Click="ForDebugOnly_SingleFileCheckButton_Click"/>
            
            <TextBlock x:Name="StatusText" 
                       Text="Ready to sync" 
                       FontSize="14" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <TextBlock Grid.Row="2" 
                   Text="© 2023 Metadata Update Tool" 
                   FontSize="10" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
