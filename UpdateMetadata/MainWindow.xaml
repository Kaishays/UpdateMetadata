<Window x:Class="UpdateMetadata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UpdateMetadata"
        mc:Ignorable="d"
        Title="Metadata Update Tool" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Metadata Update Tool" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <Button x:Name="SyncButton" 
                    Content="Sync Y Drive to Database" 
                    Width="250" 
                    Height="50" 
                    FontSize="16" 
                    Margin="0,0,0,20"
                    Click="SyncButton_Click"/>
            
            <Button x:Name="SingleFileCheckButton" 
                    Content="Single File Check" 
                    Width="250" 
                    Height="50" 
                    FontSize="16" 
                    Margin="0,0,0,20"
                    Click="ForDebugOnly_SingleFileCheckButton_Click"/>
            
            <Button x:Name="GetVideoCountButton" 
                    Content="Get RawMetadata Row Count" 
                    Width="250" 
                    Height="50" 
                    FontSize="16" 
                    Margin="0,0,0,20"
                    Click="GetVideoCountButton_Click"/>
            
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,20">
                <TextBlock Text="Test Metadata: " 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <ToggleButton x:Name="TestMetadataToggle" 
                              Width="60" 
                              Height="25"
                              IsChecked="True"
                              Click="TestMetadataToggle_Click">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border" 
                                                Background="#FFCCCCCC" 
                                                CornerRadius="10" 
                                                Width="60" 
                                                Height="25">
                                            <Grid>
                                                <Ellipse x:Name="Ellipse" 
                                                         Width="19" 
                                                         Height="19" 
                                                         Fill="White" 
                                                         HorizontalAlignment="Left" 
                                                         Margin="3,0,0,0"/>
                                                <TextBlock x:Name="ToggleText" 
                                                           Text="OFF" 
                                                           VerticalAlignment="Center" 
                                                           HorizontalAlignment="Right" 
                                                           Margin="0,0,5,0" 
                                                           FontSize="12"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Ellipse" Property="HorizontalAlignment" Value="Right"/>
                                                <Setter TargetName="Ellipse" Property="Margin" Value="0,0,3,0"/>
                                                <Setter TargetName="Border" Property="Background" Value="#FF2ECC71"/>
                                                <Setter TargetName="ToggleText" Property="Text" Value="ON"/>
                                                <Setter TargetName="ToggleText" Property="HorizontalAlignment" Value="Left"/>
                                                <Setter TargetName="ToggleText" Property="Margin" Value="5,0,0,0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
            </StackPanel>
            
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Directory Path:" 
                           Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="DirectoryPathTextBox" 
                             Height="30"
                             Padding="5"
                             Margin="0,0,5,0"/>
                    <Button x:Name="CountTsFilesButton" 
                            Grid.Column="1"
                            Content="Count TS Files" 
                            Height="30"
                            Padding="10,0"
                            Click="CountTsFilesButton_Click"/>
                </Grid>
            </StackPanel>
            
            <TextBlock x:Name="StatusText" 
                       Text="Ready to sync" 
                       FontSize="14" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <TextBlock Grid.Row="2" 
                   Text="© 2023 Metadata Update Tool" 
                   FontSize="10" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
